<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightMagenta">


    <TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textSize="30sp"
    android:textColor="@color/colorPrimaryDark"
    android:textStyle="bold"
    android:text="DELIVER SIGN UP"/>


    <EditText
        android:id="@+id/Dname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:hint="Name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:inputType="textPersonName"
        android:layout_below="@+id/title"/>

    <EditText
        android:id="@+id/Dpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:hint="Password"
        android:layout_margin="10dp"
        android:layout_below="@+id/Dname"
        android:textColor="@android:color/black"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/DAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:hint="Address"
        android:layout_margin="10dp"
        android:layout_below="@+id/Dpassword"
        android:textColor="@android:color/black"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/DEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:hint="Email"
        android:layout_margin="10dp"
        android:layout_below="@+id/DAddress"
        android:textColor="@android:color/black"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/DPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:hint="Phone"
        android:layout_margin="10dp"
        android:layout_below="@+id/DEmail"
        android:textColor="@android:color/black"
        android:inputType="phone" />

    <Button
        android:id="@+id/signupDelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Sign Up as a Deliver"
        android:layout_centerInParent="true"
        android:layout_below="@+id/DPhone"
        android:background="@drawable/buttons"/>

    <Button
    android:id="@+id/btnLoginD"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:text="Already have an account? Login"
    android:layout_centerInParent="true"
    android:layout_below="@+id/signupDelivery"
        android:background="@drawable/buttons"/>

</RelativeLayout>