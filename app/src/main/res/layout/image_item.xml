<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/input_design"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imgView"
            android:text="Product name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productName"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imgView"
            android:text="Line 2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/productCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productDesc"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imgView"
            android:text="Line 3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/productShelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productCat"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imgView"
            android:text="Line 3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/productStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productShelf"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imgView"
            android:text="Line 3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productStock"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imgView"
            android:text="Line 4"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/image_delete"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete" />

            <ImageView
                android:id="@+id/image_edit"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_edit" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>